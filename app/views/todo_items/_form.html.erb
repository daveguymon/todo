<%= form_with(model: [@todo_list, @todo_list.todo_items.build], local: true) do |form| %>
  <div class="field">
    <%= form.text_field :content, placeholder: "TYPE TODO HERE"  %>
  </div>

  <div class="field">
    <span class="priority-labels">
      <div>NOW</div>
      <div>SOON</div>
      <div>LATER</div>
    </span>
    <%= form.range_field :priority, in: 1..3, step: 1, :class => "priority-range" %>
  </div>

  <div class="button-container btn-column">
    <div class="button new-object-container">
      <%= form.submit "CREATE TASK" %>
    </div>
      <%= link_to todo_lists_path, :class => "button new-object-container" do %>
        <div>BACK</div>
      <% end %>
  </div>
<% end %>
